<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/styles.css">
  <link rel="stylesheet" href="/styles/mobile.css">
  <title>Service Ticket</title>
</head>

<body>
  <div id="header">
    <h2>Comhub Service Status</h2>
  </div>
  <%- include('../partials/navlinks'); -%>
    <div class="container">
      <a class="btn" href="/support/status">Back</a>

      <div class="ticket-container">
        <div class="ticket-card">
          <div class="ticket-title">
            <h2>
              <%= ticket.subject %>
            </h2> <span class="status <%= ticket.isOpen? " open" :"closed" %> "><%= ticket.isOpen? "Open" :"Closed" %>
            </span>
          </div>
          <p>
            <%= ticket.body %>
          </p>
          <div class="attachments">
            <h6>Attachments</h6>

            <% ticket.files.forEach(files=> { %>
              <a target="_blank" class="attachment" href="/attachments/<%= files.fileName %>">
                <%= files.fileName %>
              </a>
              <% }) %>
          </div>
        </div>
      </div>
      <div class="ticket-container">
        <h2 class='reply'>Replies</h2>
        <% ticket.messages.forEach(message=> { %>

          <div class="ticket">
            <h5 class="ticket-title">
              <%= message.senderName %>
            </h5>
            <p>
              <%= message.body %>
            </p>
          </div>
          <% }) %>
      </div>


      <form action="/support/ticket/<%= ticket._id %>" method="post">
        <div class="card">
          <div class="card-cont">
            <div>Reply</div>
            <textarea id="body" name="body" rows="4" cols="74" required></textarea>
            <button class="btn">Submit</button>
          </div>
        </div>
      </form>

    </div>

</body>

</html>